<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/corner_radius_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Payment!"
        android:textSize="35dp"
        android:textColor="@color/tealPrimary"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textGreySecondary"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:text="You are paying: "/>
    <TextView
        android:id="@+id/total_price_to_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textGreySecondary"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="$99"/>

    <!-- ..........................CARD............................. -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/paylah_image_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:scaleType="fitEnd"
        android:background="@android:color/transparent"
        android:src="@drawable/dbspaylah_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay with PayLah"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/paylah_image_button"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <!-- ..........................END OF CARD............................. -->


    <!-- ..........................CARD............................. -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/grabpay_image_button"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:scaleType="fitEnd"
                android:background="@android:color/transparent"
                android:src="@drawable/grabpay_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with GrabPay"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/grabpay_image_button"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <!-- ..........................END OF CARD............................. -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:text="Secure &amp; Fussfree payment with online payment methods"/>

</LinearLayout>